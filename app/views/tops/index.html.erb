<div class="flex flex-col space-y-6 font-bold mb-6">
  <%= link_to "タスク管理アプリ", root_path, data: { turbo_frame: "_top" },
    class: "text-4xl text-blue-600" %>

  <div class="text-right mb-4" data-controller="theme-toggle">
    <button data-action="theme-toggle#toggleTheme"
            class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
      テーマ切り替え
    </button>
  </div>

  <%= link_to "タスク一覧を表示", tasks_path, data: { turbo_frame: "task_all" },
    class: "text-blue-500 hover:text-blue-700" %>

  <%= turbo_frame_tag "task_all" do %>
    <p class="text-gray-600 text-center">タスク一覧を表示するには上のボタンを押してください。</p>
  <% end %>
</div>
