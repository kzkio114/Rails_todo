<%= link_to "index", root_path %>
<div class="p-6 bg-gray-50">
  <h1 class="font-semibold text-2xl text-gray-800 mt-6">タスク作成画面</h1>

  <div id="task_form" class="mt-6 p-4">
    <%= turbo_frame_tag "task_form" do %>
      <%= render "tasks/form", task: Task.new %>
    <% end %>
  </div>
</div>

<div id="task_detail">
  <%= turbo_frame_tag "task_detail" do %>
    <p>ここに詳細が表示されます。</p>
  <% end %>
</div>

<div id="tasks_list" class="mt-4">
  <%= turbo_frame_tag "tasks_list" do %>
    <%= render partial: "tasks/task", collection: @tasks, as: :task %>
  <% end %>
</div>
