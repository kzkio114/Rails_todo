<li id="<%= dom_id(task) %>" data-controller="task-form" class="flex space-x-4 justify-between items-center p-4 border rounded shadow-sm bg-gray-50 mr-4 mb-1">
  <div>
    <span class="font-semibold"><%= task.name %></span>
    <span class="text-gray-500">- <%= task.due_date %></span>
  </div>

  <div class="flex space-x-4">
    <% if task.persisted? %>
      <%= link_to "詳細", task_path(task), data: { turbo_frame: "task_detail" },
          class: "text-blue-500 hover:text-blue-700 px-2 py-1 border border-blue-500 rounded" %>
      <%= button_to "削除", task, method: :delete,
          data: { turbo_frame: "task_detail", action: "task-form#delete", task_id: task.id },
          class: "text-red-500 hover:text-red-700 px-2 py-1 border border-red-500 rounded" %>
    <% else %>
      <p class="text-red-500">タスクが保存されていません。</p>
    <% end %>
  </div>
</li>