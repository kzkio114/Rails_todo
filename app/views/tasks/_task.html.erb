<li id="task_<%= task.id %>">
  <%= task.name %> - <%= task.due_date %>
  <% if task.persisted? %>
    <%= button_to "詳細", task_path(task, format: :turbo_stream), method: :get,
        data: { turbo_frame: "task_detail" } %>
    <%= button_to "削除", task_path(task), method: :delete,
        data: { turbo_confirm: "削除しますか？", turbo_frame: "_top" },
        class: "text-red-500 hover:text-red-700" %>
  <% else %>
    <p class="text-red-500">タスクが保存されていません。</p>
  <% end %>
</li>
