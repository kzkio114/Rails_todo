<div id="task_form_edit">
  <%= form_with model: @task, data: { turbo_frame: "task_form_edit" }, class: "space-y-4 bg-white p-6 rounded-lg shadow-md" do |form| %>
    <%= render partial: "tasks/form_fields", locals: { form: form } %>
    <div>
      <%= form.submit "更新", class: "px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
