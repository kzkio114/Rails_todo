<%= turbo_stream.replace "task_detail" do %>
  <div id="task_detail" class="mt-6 p-4 border-gray-300 rounded-lg">
    <h3 class="text-xl font-bold mb-2">タスク詳細</h3>
    <p><strong>タスク名:</strong> <%= @task.name %></p>
    <p><strong>詳細:</strong> <%= @task.details %></p>
    <p><strong>締切日:</strong> <%= @task.due_date %></p>
    <p><strong>完了:</strong> <%= @task.completed ? "はい" : "いいえ" %></p>
    <%= button_to "編集", task_path(@task), method: :patch, data: { turbo_frame: "task_detail" } %>
    <%= button_to "削除", task_path(@task), method: :delete, data: { turbo_confirm: "削除しますか？", turbo_frame: "task_list" }, class: "text-red-500 hover:text-red-700" %>
  </div>
<% end %>
