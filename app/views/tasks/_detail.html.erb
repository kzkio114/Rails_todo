<%= turbo_stream.replace "task_form" do %>
  <%= render partial: "tasks/form", locals: { task: Task.new } %>
<% end %>

<div id="task_detail_<%= @task.id %>">
    <h3 class="text-xl font-bold mb-2">タスク詳細</h3>
    <p><strong>タスク名:</strong> <%= @task.name %></p>
    <p><strong>詳細:</strong> <%= @task.details %></p>
    <p><strong>締切日:</strong> <%= @task.due_date %></p>
    <p><strong>完了:</strong> <%= @task.completed ? "はい" : "いいえ" %></p>
</div>

<div id="task_form">
<%= button_to "戻り", task_path(@task, format: :turbo_stream), method: :get, data: { turbo_frame: "task_list" }, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>