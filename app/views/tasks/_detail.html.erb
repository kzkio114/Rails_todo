<%= turbo_frame_tag "task_detail" do %>
  <% if task.present? %>
    <div class="flex justify-between items-center mb-4">
      <h3 class="font-semibold text-xl">タスク詳細</h3>
    </div>

    <%= render partial: "tasks/preview", locals: { task: task } %>

    <%= turbo_frame_tag "task_edit" do %>
      <%= render partial: "tasks/edit_form", locals: { task: task } %>
    <% end %>
  <% else %>
    <p>タスクが選択されていません。</p>
  <% end %>
<% end %>