<%= form_with model: @task, url: @task.new_record? ? tasks_path : task_path(@task), method: @task.new_record? ? :post : :patch, local: true do |form| %>
  <div class="flex flex-col">
    <%= form.label :name, "タスク名", class: "mb-2 font-semibold text-gray-700" %>
    <%= form.text_field :name, class: "p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
  </div>
  <div class="flex flex-col">
    <%= form.label :details, "詳細", class: "mb-2 font-semibold text-gray-700" %>
    <%= form.text_area :details, class: "p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
  </div>
  <div class="flex flex-col">
    <%= form.label :due_date, "締切日", class: "mb-2 font-semibold text-gray-700" %>
    <%= form.date_field :due_date, class: "p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
  </div>
  <div class="flex items-center space-x-2">
    <%= form.check_box :completed, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :completed, "完了", class: "text-gray-700" %>
  </div>
  <div>
    <%= form.submit @task.new_record? ? "保存" : "更新", class: "px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2" %>
  </div>
<% end %>
